<div class="container">
  <h2 class="title">Round {{roundNumber}}</h2>
  <h3>See results</h3>



<div class="container-group">

  <h4>Your score: {{score}}</h4>

  {{#each gameList}}
  

    <div class="match{{#if this.resultBet}}-{{#if this.win}}green{{else}}red{{/if}}{{/if}}">
      <div class="team1">
        <img src="{{this.picture_local}}" alt="">
        <p class="teamName">{{this.team_local}}</p>
      </div>

      <div class="pool">
        <p class="prediction">{{this.goals_local}} - {{this.goals_visitor}}</p>
        {{#if this.resultBet}}<p class="prediction">({{this.resultBet}})</p>{{/if}}
      </div>

      <div class="team2">
        <img src="{{this.picture_visitor}}" alt="">
        <p class="teamName">{{this.team_visitor}}</p>
      </div>
    </div>

  {{/each}}

</div>


  <h2>Raking Round {{roundNumber}}</h2>


 <ol class="score-list">
  {{#each userList}}
 
  <li>
    <div class="score-row">
      <div class="score-half-div"><p>{{this.username}}</p></div>
      <div class="score-half-div"><p>Hits - {{this.score}}</p></div>
    </div>
  </li>
    
  {{/each}}
  </ol>

  <a href="/group/{{groupId}}">
    <button class="btn-group2" type="button">Return to Rounds</button>
  </a>


</div>